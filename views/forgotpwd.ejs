<%- include('partials/header'); -%>
  <div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
      <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
        <h3 class="webportal"><img class="logo" src="/assets/images/logo.png" alt="SadbhawnaLogo" width="50"
            height="60"> Sadbhawna</h3>
        <p class="blue-text">Action speaks louder than words</p>
        <div class="card">
          <h5 class="text-center mb-4"></h5>
          <form class="form-card" onsubmit="event.preventDefault()">
            <div class="row justify-content-between text-left">
              <div class="form-group col flex-column d-flex">
                <label class="form-control-label px-3">Email<span class="text-danger"> *</span></label>
                <input type="email" id="email" name="email" placeholder="Enter your email">
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="form-group col-md-4"> <a type="submit" class="btn btn-primary" href="#">Reset Password</a>
              </div>
            </div>
            <div class="row justify-content-center">
              <div class="form-group col-md-4">
                <a type="submit" class="btn btn-primary" href="/auth/login">Back to Sign In page </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/footer'); -%>